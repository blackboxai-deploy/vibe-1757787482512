{#
/**
 * @file
 * Default theme implementation to display a single page.
 */
#}
<!DOCTYPE html>
<html{{ html_attributes }} lang="id" class="scroll-smooth">
<head>
  {{ head }}
  <title>{{ head_title }}</title>
  {{ css }}
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Layanan pembuatan website profesional untuk bisnis Anda. Solusi web development, e-commerce, dan aplikasi mobile dengan teknologi terkini.">
</head>
<body{{ attributes.addClass('antialiased', 'bg-white', 'text-gray-900') }}>
  <div class="min-h-screen flex flex-col">
    
    {# Header #}
    <header class="bg-white/95 backdrop-blur-sm border-b border-gray-100 sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          {# Logo #}
          <div class="flex-shrink-0">
            <a href="{{ path('<front>') }}" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">
              Zathaya Soft
            </a>
          </div>

          {# Desktop Navigation #}
          {% if page.header %}
            <div class="hidden md:block">
              <div class="ml-10 flex items-baseline space-x-8">
                {{ page.header }}
              </div>
            </div>
          {% endif %}

          {# CTA Button #}
          <div class="hidden md:block">
            <a href="{{ path('entity.webform.canonical', {'webform': 'contact'}) }}" 
               class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-6 py-2 rounded-md text-sm font-medium transition-all duration-200">
              Konsultasi Gratis
            </a>
          </div>

          {# Mobile menu button #}
          <div class="md:hidden">
            <button class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
              <span class="sr-only">Open main menu</span>
              <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>

        {# Mobile Navigation #}
        <div class="mobile-menu hidden md:hidden">
          <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-gray-100">
            {{ page.header }}
            <div class="px-3 py-2">
              <a href="{{ path('entity.webform.canonical', {'webform': 'contact'}) }}" 
                 class="w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-6 py-2 rounded-md text-sm font-medium text-center block">
                Konsultasi Gratis
              </a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    {# Hero Section (for front page) #}
    {% if page.hero %}
      {{ page.hero }}
    {% endif %}

    {# Main Content #}
    <main class="flex-1">
      {% if page.highlighted %}
        <div class="highlighted">
          {{ page.highlighted }}
        </div>
      {% endif %}

      {% if messages %}
        <div class="messages max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
          {{ messages }}
        </div>
      {% endif %}
      
      <div class="content">
        {{ page.content }}
      </div>

      {# Additional sections #}
      {% if page.services %}
        {{ page.services }}
      {% endif %}

      {% if page.testimonials %}
        {{ page.testimonials }}
      {% endif %}

      {% if page.cta %}
        {{ page.cta }}
      {% endif %}
    </main>

    {# Footer #}
    <footer class="bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          {# Company Info #}
          <div class="col-span-1 md:col-span-2">
            <div class="mb-4">
              <h3 class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">
                Zathaya Soft
              </h3>
            </div>
            <p class="text-gray-300 mb-6 max-w-md">
              Solusi website profesional untuk transformasi digital bisnis Anda. 
              Kami menghadirkan teknologi terkini dengan desain yang elegan dan fungsional.
            </p>
            
            {# Contact Info #}
            <div class="space-y-2 text-gray-300">
              <div class="flex items-center space-x-3">
                <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>info@zathayasoft.com</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>+62 812-3456-7890</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>Jakarta, Indonesia</span>
              </div>
            </div>
          </div>

          {# Footer Content #}
          <div class="col-span-1 md:col-span-2">
            {{ page.footer }}
          </div>
        </div>

        {# Copyright #}
        <div class="mt-12 pt-8 border-t border-gray-800">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="flex space-x-6 mb-4 md:mb-0">
              {# Social Media Links #}
              <a href="#" class="text-gray-400 hover:text-blue-400 transition-colors duration-200">
                <span class="sr-only">Facebook</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            </div>
            <p class="text-gray-400 text-sm">
              Â© {{ "now"|date("Y") }} Zathaya Soft. Seluruh hak cipta dilindungi.
            </p>
          </div>
        </div>
      </div>
    </footer>
  </div>
  
  {{ js }}
</body>
</html>