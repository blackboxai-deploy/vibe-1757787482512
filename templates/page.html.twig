{#
/**
 * @file
 * Theme override to display a single page.
 */
#}
<div class="min-h-screen flex flex-col">
  {# Header #}
  {% if page.header %}
    <header class="bg-white/95 backdrop-blur-sm border-b border-gray-100 sticky top-0 z-50" role="banner">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          {# Logo #}
          <div class="flex-shrink-0">
            <a href="{{ path('<front>') }}" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">
              {% if site_name %}
                {{ site_name }}
              {% else %}
                Zathaya Soft
              {% endif %}
            </a>
          </div>

          {# Desktop Navigation #}
          <div class="hidden md:block">
            {% if page.primary_menu %}
              <div class="ml-10 flex items-baseline space-x-8">
                {{ page.primary_menu }}
              </div>
            {% else %}
              <div class="ml-10 flex items-baseline space-x-8">
                <a href="{{ path('<front>') }}" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Beranda</a>
                <a href="/services" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Layanan</a>
                <a href="/portfolio" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Portfolio</a>
                <a href="/about" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Tentang Kami</a>
                <a href="/contact" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Kontak</a>
              </div>
            {% endif %}
          </div>

          {# CTA Button #}
          <div class="hidden md:block">
            <a href="/contact" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
              Konsultasi Gratis
            </a>
          </div>

          {# Mobile menu button #}
          <div class="md:hidden">
            <button type="button" class="mobile-menu-toggle inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500" aria-controls="mobile-menu" aria-expanded="false">
              <span class="sr-only">Open main menu</span>
              <svg class="block h-6 w-6 menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
              <svg class="hidden h-6 w-6 close-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>

        {# Mobile Navigation #}
        <div class="md:hidden hidden mobile-menu" id="mobile-menu">
          <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-gray-100">
            <a href="{{ path('<front>') }}" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium">Beranda</a>
            <a href="/services" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium">Layanan</a>
            <a href="/portfolio" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium">Portfolio</a>
            <a href="/about" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium">Tentang Kami</a>
            <a href="/contact" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium">Kontak</a>
            <div class="px-3 py-2">
              <a href="/contact" class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800">
                Konsultasi Gratis
              </a>
            </div>
          </div>
        </div>
      </nav>
    </header>
  {% endif %}

  {# Page Top #}
  {% if page.page_top %}
    {{ page.page_top }}
  {% endif %}

  {# Main Content Area #}
  <main id="main-content" class="flex-1" role="main">
    {# Highlighted #}
    {% if page.highlighted %}
      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
        {{ page.highlighted }}
      </div>
    {% endif %}

    {# Breadcrumb #}
    {% if page.breadcrumb %}
      <div class="bg-gray-50 py-4">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          {{ page.breadcrumb }}
        </div>
      </div>
    {% endif %}

    {# Featured Top #}
    {% if page.featured_top %}
      <div class="featured-top">
        {{ page.featured_top }}
      </div>
    {% endif %}

    {# Main Content #}
    <div class="main-content">
      {% if page.sidebar_first or page.sidebar_second %}
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="flex flex-wrap -mx-4">
            {% if page.sidebar_first %}
              <aside class="w-full lg:w-1/4 px-4 mb-8 lg:mb-0" role="complementary">
                {{ page.sidebar_first }}
              </aside>
            {% endif %}
            
            <div class="w-full {% if page.sidebar_first and page.sidebar_second %}lg:w-1/2{% elseif page.sidebar_first or page.sidebar_second %}lg:w-3/4{% endif %} px-4">
              {{ page.content }}
            </div>
            
            {% if page.sidebar_second %}
              <aside class="w-full lg:w-1/4 px-4" role="complementary">
                {{ page.sidebar_second }}
              </aside>
            {% endif %}
          </div>
        </div>
      {% else %}
        {{ page.content }}
      {% endif %}
    </div>

    {# Featured Bottom #}
    {% if page.featured_bottom_first or page.featured_bottom_second or page.featured_bottom_third %}
      <div class="featured-bottom bg-gray-50 py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid md:grid-cols-3 gap-8">
            {% if page.featured_bottom_first %}
              <div class="featured-bottom-first">
                {{ page.featured_bottom_first }}
              </div>
            {% endif %}
            {% if page.featured_bottom_second %}
              <div class="featured-bottom-second">
                {{ page.featured_bottom_second }}
              </div>
            {% endif %}
            {% if page.featured_bottom_third %}
              <div class="featured-bottom-third">
                {{ page.featured_bottom_third }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}
  </main>

  {# Footer #}
  <footer class="bg-gray-900 text-white mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
          {% if page.footer_first %}
            <div class="footer-first col-span-1 md:col-span-2">
              {{ page.footer_first }}
            </div>
          {% endif %}
          {% if page.footer_second %}
            <div class="footer-second">
              {{ page.footer_second }}
            </div>
          {% endif %}
          {% if page.footer_third %}
            <div class="footer-third">
              {{ page.footer_third }}
            </div>
          {% endif %}
          {% if page.footer_fourth %}
            <div class="footer-fourth">
              {{ page.footer_fourth }}
            </div>
          {% endif %}
        </div>
      {% else %}
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          {# Default Footer Content #}
          <div class="col-span-1 md:col-span-2">
            <div class="mb-4">
              <h3 class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">
                {% if site_name %}{{ site_name }}{% else %}Zathaya Soft{% endif %}
              </h3>
            </div>
            <p class="text-gray-300 mb-6 max-w-md">
              Solusi website profesional untuk transformasi digital bisnis Anda. 
              Kami menghadirkan teknologi terkini dengan desain yang elegan dan fungsional.
            </p>
            
            {# Contact Info #}
            <div class="space-y-2 text-gray-300">
              <div class="flex items-center space-x-3">
                <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>info@zathayasoft.com</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>+62 812-3456-7890</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>Jakarta, Indonesia</span>
              </div>
            </div>
          </div>

          {# Quick Links #}
          <div>
            <h4 class="text-lg font-semibold mb-4 text-white">Navigasi</h4>
            <ul class="space-y-2">
              <li><a href="{{ path('<front>') }}" class="text-gray-300 hover:text-blue-400 transition-colors duration-200">Beranda</a></li>
              <li><a href="/services" class="text-gray-300 hover:text-blue-400 transition-colors duration-200">Layanan</a></li>
              <li><a href="/portfolio" class="text-gray-300 hover:text-blue-400 transition-colors duration-200">Portfolio</a></li>
              <li><a href="/about" class="text-gray-300 hover:text-blue-400 transition-colors duration-200">Tentang Kami</a></li>
              <li><a href="/contact" class="text-gray-300 hover:text-blue-400 transition-colors duration-200">Kontak</a></li>
            </ul>
          </div>

          {# Services #}
          <div>
            <h4 class="text-lg font-semibold mb-4 text-white">Layanan</h4>
            <ul class="space-y-2">
              <li><span class="text-gray-300">Website Development</span></li>
              <li><span class="text-gray-300">E-commerce Solution</span></li>
              <li><span class="text-gray-300">Mobile App Development</span></li>
              <li><span class="text-gray-300">Landing Page Design</span></li>
              <li><span class="text-gray-300">SEO & Digital Marketing</span></li>
            </ul>
          </div>
        </div>
      {% endif %}

      {# Copyright and Social Media #}
      <div class="mt-12 pt-8 border-t border-gray-800">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex space-x-6 mb-4 md:mb-0">
            {# Social Media Links #}
            <a href="#" class="text-gray-400 hover:text-blue-400 transition-colors duration-200">
              <span class="sr-only">Facebook</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-blue-400 transition-colors duration-200">
              <span class="sr-only">Instagram</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-2.451 0-4.438-1.987-4.438-4.438s1.987-4.438 4.438-4.438c1.092 0 2.107.424 2.876 1.194.769.769 1.194 1.784 1.194 2.876-.001 2.451-1.988 4.406-4.47 4.406z"/>
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-blue-400 transition-colors duration-200">
              <span class="sr-only">LinkedIn</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
          <p class="text-gray-400 text-sm">
            Â© {{ "now"|date("Y") }} {% if site_name %}{{ site_name }}{% else %}Zathaya Soft{% endif %}. Seluruh hak cipta dilindungi.
          </p>
        </div>
      </div>
    </div>

    {% if page.footer %}
      <div class="border-t border-gray-800">
        {{ page.footer }}
      </div>
    {% endif %}
  </footer>

  {# Page Bottom #}
  {% if page.page_bottom %}
    {{ page.page_bottom }}
  {% endif %}
</div>